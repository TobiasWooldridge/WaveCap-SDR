{
  "name": "wavecap-sdr-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --cache --cache-location node_modules/.cache/eslint",
    "type-check": "tsc --noEmit --incremental",
    "prepare": "cd .. && husky frontend/.husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --cache --cache-location node_modules/.cache/eslint",
      "prettier --check"
    ],
    "*.{js,jsx,json,md,css,html}": [
      "prettier --check"
    ]
  },
  "dependencies": {
    "@tanstack/react-query": "^5.56.2",
    "bootstrap": "^5.3.3",
    "clsx": "^2.0.0",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react": "^4.1.1",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "sass": "^1.70.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0"
  }
}
